{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Tauri Development Debug (Rust)",
      "cargo": {
        "args": [
          "build",
          "--manifest-path=./src-tauri/Cargo.toml",
          "--no-default-features"
        ]
      },
      "env": {
        "RUST_BACKTRACE": "1"
      },
      "preLaunchTask": "ui:dev"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Tauri Development Debug (Svelte)",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src"
    }
  ],
  "compounds": [
    {
      "name": "Tauri: All",
      "configurations": ["Tauri Development Debug (Rust)", "Tauri Development Debug (Svelte)"],
      "stopAll": true
    }
  ]
}